<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Student_folder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/splash_background</item>-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/invertidoC</item>
        <item name="colorPrimaryVariant">@color/glass</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/invertidoC</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/barNotiDark</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!--Dark theme mode-->
    <style name="screen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/backgroundDark</item>
    </style>

    <!--text color dark-->
    <style name="textHigh" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="textMedium" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white_60</item>
    </style>

    <style name="textDisabled" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white_38</item>
    </style>

    <!--imgButton color dark-->
    <style name="imgButton" parent="Theme.AppCompat.NoActionBar">
        <item name="android:backgroundTint">@color/white_87</item>
    </style>

    <!--button color dark-->
    <style name="button" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/primaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--floating button color dark-->
    <style name="buttonFloating" parent="Theme.AppCompat.NoActionBar">

        <item name="fab_colorNormal">@color/primaryDark</item>
        <item name="fab_colorPressed">@color/glass</item>
        <item name="fab_colorRipple">@color/glass</item>
        <item name="fab_shadowColor">@color/black</item>
        <item name="fab_shadowRadius">6dp</item>
        <item name="fab_showShadow">true</item>
    </style>

    <!--floating menu color dark-->
    <style name="menuFloating" parent="Theme.AppCompat.NoActionBar">

        <item name="menu_backgroundColor">@color/floatingButtonBackgroundDark</item>
        <item name="menu_colorNormal">@color/primaryDark</item>
        <item name="menu_colorPressed">@color/white</item>
        <item name="menu_colorRipple">@color/white</item>
        <item name="menu_labels_colorNormal">@color/surface06dp</item>
        <item name="menu_labels_colorPressed">@color/black</item>
        <item name="menu_labels_colorRipple">@color/white</item>
        <item name="menu_labels_showShadow">true</item>
        <item name="menu_labels_textColor">@color/white</item>
        <item name="menu_shadowColor">@color/black</item>
        <item name="menu_shadowRadius">6dp</item>
        <item name="menu_showShadow">true</item>
    </style>

    <!--noteitem for resycle view-->
    <style name="noteItemCardView" parent="Theme.AppCompat.NoActionBar">
        <item name="cardBackgroundColor">@color/surface01dp</item>
    </style>

    <!--Edit Text-->
    <style name="editText" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textColorHint">@color/white_60</item>
    </style>

    <!--Toolbar-->
    <style name="toolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/surface02dp</item>
    </style>

    <!--NavigationView-->
    <style name="navigationView" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/backgroundDark</item>
        <item name="itemIconTint">@color/white_87</item>
        <item name="itemTextColor">@color/white_87</item>
    </style>

</resources>