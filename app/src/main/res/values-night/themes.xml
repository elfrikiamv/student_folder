<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Student_folder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/splash_background</item>-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/invertidoC</item>
        <item name="colorPrimaryVariant">@color/glass</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/invertidoC</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!--Dark theme mode-->
    <style name="screen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/background</item>
    </style>

    <!--text color dark-->
    <style name="textHigh" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="textMedium" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white_60</item>
    </style>

    <style name="textDisabled" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white_38</item>
    </style>

    <style name="text" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--imgButton color dark-->
    <style name="imgButton" parent="Theme.AppCompat.NoActionBar">
        <item name="android:backgroundTint">@color/white_87</item>
    </style>

    <!--button color dark-->
    <style name="button" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/Primary</item>
        <item name="android:textColor">@color/white_87</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>