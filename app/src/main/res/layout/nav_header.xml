    <TextView
        android:text="nombre"
        android:id="@+id/cuenta_name"
        android:textColor="@color/black"
        android:paddingTop="8dp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>